{
    "id": "org.gnome.TextEditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-text-editor",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup": [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libeditorconfig",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_DOCUMENTATION=OFF",
                "-DINSTALL_HTML_DOC=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/editorconfig/editorconfig-core-c.git",
                    "tag": "v0.12.6"
                }
            ]
        },
        {
            "name": "libspelling",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Ddocs=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libspelling/0.4/libspelling-0.4.7.tar.xz",
                    "sha256": "42f130f295f5addb6e9e8e74ccfbb709794bd2dfd021293e2875b9481bbd4e88",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libspelling"
                    }
                }
            ]
        },
        {
            "name": "gnome-text-editor",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-text-editor/48/gnome-text-editor-48.1.tar.xz",
                    "sha256": "52089ba978a665841803b1b69e0e7be75b09a7d54e01e8d0bb29926e0f342437",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-text-editor"
                    }
                }
            ]
        }
    ]
}
