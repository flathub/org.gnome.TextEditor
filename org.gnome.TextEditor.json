{
    "app-id" : "org.gnome.TextEditor",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43beta",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-text-editor",
    "finish-args" : [
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfsd",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libeditorconfig",
            "buildsystem" : "cmake",
            "config-opts" : [ "-DBUILD_DOCUMENTATION=OFF", "-DINSTALL_HTML_DOC=OFF" ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/editorconfig/editorconfig-core-c.git",
                    "tag" : "v0.12.5"
                }
            ]
        },
        {
            "name" : "gnome-text-editor",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-text-editor/43/gnome-text-editor-43.0.tar.xz",
                    "sha256": "b0fbbfcb17c6abc65dfb1ef5ff2fb1cadc1aa9536cd5e8589814b87e7812aa61",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-text-editor",
                        "stable-only": false
                    }
                }
            ]
        }
    ]
}
