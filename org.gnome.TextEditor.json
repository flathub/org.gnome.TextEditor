{
    "app-id" : "org.gnome.TextEditor",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-text-editor",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup" : [
        "/include",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libeditorconfig",
            "buildsystem" : "cmake",
            "config-opts" : [ "-DBUILD_DOCUMENTATION=OFF", "-DINSTALL_HTML_DOC=OFF" ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/editorconfig/editorconfig-core-c.git",
                    "tag" : "v0.12.5"
                }
            ]
        },
        {
            "name" : "gnome-text-editor",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gnome-text-editor/43/gnome-text-editor-43.1.tar.xz",
                    "sha256" : "973a4b0deb68f9f91a54a4dd415b6afde9b5ae3ee684bc761471f94290f9f6cb"
                }
            ]
        }
    ]
}
